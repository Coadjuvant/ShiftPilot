# ShiftPilot Auto-Deploy Service
# Place in: /etc/systemd/system/shiftpilot-deploy.service

[Unit]
Description=ShiftPilot Auto-Deployment Service
After=network.target

[Service]
Type=oneshot
User=YOUR_USERNAME
WorkingDirectory=/path/to/wip-scheduler
ExecStart=/bin/bash /path/to/wip-scheduler/auto-deploy.sh

# Prevent multiple simultaneous runs
LockPersonality=yes

[Install]
WantedBy=multi-user.target
